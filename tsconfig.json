{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      // "@atoms/*": ["./libs/components/atoms/*"],
      // "@atoms": ["./libs/components/atoms/index.ts"],
      "@molecules/*": ["./libs/components/molecules/*"],
      "@molecules": ["./libs/components/molecules/index.ts"],
      "@organisms/*": ["./libs/components/organisms/*"],
      "@organisms": ["./libs/components/organisms/index.ts"],
      "@types/*": ["./libs/types/*"],
      "@types": ["./libs/types/index.ts"],
      "@api/*": ["./libs/api/*"],
      "@api": ["./libs/api/index.ts"],
      "@hooks/*": ["./libs/hooks/*"],
      "@hooks": ["./libs/hooks/index.ts"]
    }
  },
  "declaration": false,
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "importHelpers": true,
  "skipDefaultLibCheck": true,
  "strictNullChecks": false,
  "baseUrl": ".",
  "noImplicitOverride": true,
  "noPropertyAccessFromIndexSignature": true,
  "noImplicitReturns": true,
  "noFallthroughCasesInSwitch": true,
  "allowSyntheticDefaultImports": true,
  "noImplicitAny": true,
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".storybook/**/*",
    "**/*.stories.tsx",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "jest.setup.ts",
    "jest.config.ts",
    "jest.preset.ts"
  ]
}
